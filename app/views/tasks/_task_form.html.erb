<%= form_for(task) do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>

  <%= f.label :description  %>
  <%= f.text_field :description %>

  <%= f.label :priority  %>
  <%= f.select :priority, options_for_select(['low', 'medium','high']) %>

  <%= f.label :status  %>
  <%= f.select :status, options_for_select(['pending', 'in progress', 'completed']) %>

  <%= f.label :start  %>
  <%= f.date_select :start %>

  <%= f.label :end  %>
  <%= f.date_select :end %>

  <%= f.submit %>
<% end %>