<table>
  <thead>
    <tr>
      <th><%= t 'tasks.table.created_at' %></th>
      <th><%= t 'tasks.table.name' %></th>
      <th><%= t 'tasks.table.description' %></th>
      <th><%= t 'tasks.table.status' %></th>
      <th><%= t 'tasks.table.priority' %></th>
      <th><%= t 'tasks.table.start' %></th>
      <th><%= t 'tasks.table.end' %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @task %>
  </tbody>
</table>

<%= link_to t('.edit'), edit_task_path(@task)  %>
<%= link_to t('.delete'), task_path(@task), method: :delete, data: { confirm: t('.delete_confirm') } %>
<%= link_to t('.back'), tasks_path  %>