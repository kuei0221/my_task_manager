<table class='table'>
  <thead>
    <tr>
      <th><%= t 'tasks.table.created_at' %></th>
      <th><%= t 'tasks.table.name' %></th>
      <th><%= t 'tasks.table.description' %></th>
      <th><%= t 'tasks.table.status' %></th>
      <th><%= t 'tasks.table.priority' %></th>
      <th><%= t 'tasks.table.label' %></th>
      <th><%= t 'tasks.table.start_date' %></th>
      <th><%= t 'tasks.table.end_date' %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @task %>
  </tbody>
</table>

<div class='row m-3'>
  <%= link_to t('.edit'), edit_task_path(@task), class: 'btn btn-sm btn-primary mr-2'  %>
  <%= link_to t('.delete'), task_path(@task), method: :delete, class: 'btn btn-sm btn-danger mr-2', data: { confirm: t('.delete_confirm') } %>
  <%= link_to t('.back'), tasks_path, class: 'btn btn-sm btn-secondary'  %>
</div>

<%= link_to t('.new_label'), new_task_label_path, class: 'btn btn-sm btn-primary my-3' %>
<%= render '/task_labels/task_label_table', tasks: @task %>
