<% if user.errors.any? %>
  <% user.errors.full_messages.each do |msg| %>
    <div class='alert alert-danger'>
      <%= msg %>
    </div>
  <% end %>
<% end %>

<div class='row'>
  <%= form_for([:admin, user], as: :admin_user, html: { class: 'col-5 ml-3 my-3' }) do |f| %>
    <div class='form-group row'>
      <%= f.label :name, class: 'col-sm-2  col-form-label' %>
      <%= f.text_field :name, class: 'col-sm-10 form-control' %>
    </div>
    
    <div class='form-group row'>
      <%= f.label :password, class: 'col-sm-2  col-form-label' %>
      <%= f.password_field :password, class: 'col-sm-10 form-control'%>
    </div>
    
    <%= f.submit nil, class: 'btn btn-primary' %>
  <% end %>
</div>