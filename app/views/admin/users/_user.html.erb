<tr id="user-<%= user.id%>">
  <td><%= user.name %></td>
  <td><%= user.admin %></td>
  <td><%= user.tasks_count %></td>
  <td>
    <%= link_to t('.edit'), edit_admin_user_path(user), class: 'btn btn-sm btn-primary' %>
    <%= link_to t('.delete'), admin_user_path(user), method: :delete, data: { confirm: t('.delete_confirm') }, class: 'btn btn-sm btn-danger' %>
  </td>
</tr>